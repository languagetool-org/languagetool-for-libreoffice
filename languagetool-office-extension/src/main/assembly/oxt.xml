<!-- documentation can be found at http://maven.apache.org/plugins/maven-assembly-plugin/assembly.html -->
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>COPYING.txt</include>
                <include>help/**</include>
                <include>images/**</include>
                <include>META-INF/**</include>
                <include>description.xml</include>
                <include>Addons.xcu</include>
                <include>Linguistic.xcu</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>junit:junit</exclude>
                <exclude>org.openoffice:*</exclude>
                <exclude>com.carrotsearch:hppc</exclude>
                <exclude>net.java.dev.jna:jna</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
